<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.swudolistapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/swutudent"
        android:label="SWUdoList"
        android:roundIcon="@drawable/swutudent"
        android:supportsRtl="true"
        android:theme="@style/Theme.SWUdoListApp">
        <activity android:name=".SplashActivity"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".PostActivity" />
        <activity android:name=".BoardActivity" />
        <activity android:name=".ToDoListActivity" />
        <activity android:name=".SelectSubjectActivity"
            android:theme="@style/SubjectList"/>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity"/>
        <activity android:name=".MainActivity" />
    </application>

</manifest>